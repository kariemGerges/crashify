# =============================================
# Crashify Environment Variables Example
# =============================================
# Copy this file to .env.local and fill in your actual values
# cp .env.example .env.local
# Then edit .env.local with your actual credentials

# =============================================
# REQUIRED - Supabase Configuration
# =============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================
# REQUIRED - Database Configuration
# =============================================
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# =============================================
# REQUIRED - Application URL
# =============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================
# Email Configuration (Resend)
# =============================================
RESEND_API_KEY=your_resend_api_key
RESEND_EMAIL_FROM=info@crashify.com.au

# =============================================
# Email Configuration (IMAP - for email processing)
# =============================================
IMAP_USER=info@crashify.com.au
IMAP_PASSWORD=your_imap_password
IMAP_HOST=imap.outlook.com
IMAP_PORT=993
EMAIL_PROCESSOR_TOKEN=your_email_processor_token

# =============================================
# Email Service Configuration (Optional)
# =============================================
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY_MS=1000
EMAIL_TIMEOUT_MS=30000

# =============================================
# Payment Configuration (Stripe)
# =============================================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# =============================================
# AI Services Configuration
# =============================================
# Claude AI (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key

# =============================================
# Security Configuration
# =============================================
ENCRYPTION_KEY=your_32_character_encryption_key_here
CSRF_SECRET=your_csrf_secret_key_change_in_production

# =============================================
# reCAPTCHA Configuration
# =============================================
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# =============================================
# Brevo (Sendinblue) Email Service (Optional)
# =============================================
brevo_API_KEY=your_brevo_api_key

# =============================================
# MongoDB Configuration (Optional)
# =============================================
MONGODB_URI=mongodb://localhost:27017/crashify

# =============================================
# Twilio SMS Configuration (Optional)
# =============================================
# TWILIO_PHONE_NUMBER=+1234567890
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token

# =============================================
# Node Environment
# =============================================
NODE_ENV=development
